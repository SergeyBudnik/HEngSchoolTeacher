<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/app_size_0_5"
    android:paddingBottom="@dimen/app_size_0_5"
    android:paddingStart="@dimen/app_size_1"
    android:paddingEnd="@dimen/app_size_1"
    android:background="@drawable/layout_row"
    android:backgroundTint="@color/alt_contrast_light">

    <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
        android:id="@+id/studentPaymentItemValueView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000 Р"
        android:textSize="@dimen/font_large"
        android:textColor="@color/fill_text_basic_accent"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
            android:id="@+id/studentPaymentItemTeacherView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/app_size_1"
            android:text="Надежда Кропина"
            android:textSize="@dimen/font_large"
            android:textColor="@color/fill_text_basic_light"/>

        <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
            android:id="@+id/studentPaymentItemTimeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02.01.2019"
            android:textSize="@dimen/font_large"
            android:textColor="@color/fill_text_basic"/>

    </LinearLayout>

</RelativeLayout>
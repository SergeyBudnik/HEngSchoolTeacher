<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/app_size_1"
    android:paddingStart="@dimen/app_size_2"
    android:paddingEnd="@dimen/app_size_2"
    android:paddingBottom="@dimen/app_size_1"
    android:background="@drawable/layout_row"
    android:backgroundTint="@color/alt_contrast_light">

    <ImageView
        android:layout_width="@dimen/app_size_1_5"
        android:layout_height="@dimen/app_size_1_5"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/app_size_1_5"
        android:src="@drawable/ic_teacher"
        android:tint="@color/fill_text_accent"
        android:importantForAccessibility="no"/>

    <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
        android:id="@+id/teacherInfoNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/fill_text_accent"
        android:textSize="@dimen/font_large"/>

</LinearLayout>
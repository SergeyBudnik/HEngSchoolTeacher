<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/app_size_2">

        <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_size_1"
            android:text="@string/login_login_label"
            android:textSize="@dimen/font_large"
            android:textColor="@color/fill_text_base"
            app:app_font="regular"/>

        <EditText
            android:id="@+id/loginLoginView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_size_0_5"
            android:hint="@string/login_login_placeholder"
            android:inputType="text"/>

        <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_size_1"
            android:text="@string/login_password_label"
            android:textSize="@dimen/font_large"
            android:textColor="@color/fill_text_base"
            app:app_font="regular"/>

        <EditText
            android:id="@+id/loginPasswordView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/login_password_placeholder"
            android:inputType="textPassword"/>

        <com.bdev.hengschoolteacher.ui.views.branded.BrandedButtonView_
            android:id="@+id/loginDoLoginView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_size_1"
            app:button_text="@string/login_do_login"/>

    </LinearLayout>

</RelativeLayout>
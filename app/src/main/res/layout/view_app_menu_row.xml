<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menuItemView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/app_size_1"
    android:paddingBottom="@dimen/app_size_1"
    android:paddingStart="@dimen/app_size_2"
    android:paddingEnd="@dimen/app_size_2">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/menuItemIconView"
            android:layout_width="@dimen/app_size_1_5"
            android:layout_height="@dimen/app_size_1_5"
            android:layout_marginEnd="@dimen/app_size_1"
            android:layout_gravity="center_vertical"
            android:tint="@color/fill_text_basic"
            android:importantForAccessibility="no"/>

        <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
            android:id="@+id/menuItemNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/font_large"
            android:textColor="@color/fill_text_basic"
            app:app_font="bold"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/menuItemAlertView"
        android:layout_width="@dimen/app_size_2"
        android:layout_height="@dimen/app_size_2"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_alert"
        android:tint="@color/fill_text_basic_negative"
        android:importantForAccessibility="no"
        android:visibility="gone"/>

</RelativeLayout>
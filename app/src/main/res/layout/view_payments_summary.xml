<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fill_contrast_base">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/app_size_1"
        android:paddingBottom="@dimen/app_size_1"
        android:paddingStart="@dimen/app_size_2"
        android:paddingEnd="@dimen/app_size_2">

        <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/app_size_0_5"
            android:text="@string/payments_summary_label"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/fill_text_basic"/>

        <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
            android:id="@+id/paymentsSummaryAmountView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/fill_text_basic_accent"/>

    </LinearLayout>

    <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
        android:id="@+id/paymentsSummaryPeriodView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingTop="@dimen/app_size_1"
        android:paddingBottom="@dimen/app_size_1"
        android:paddingStart="@dimen/app_size_2"
        android:paddingEnd="@dimen/app_size_2"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/fill_text_basic_subtle"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_size_4"
    android:background="@color/fill_contrast_base">

    <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
        android:id="@+id/brandedHeaderSearchCancelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:paddingStart="@dimen/app_size_1"
        android:paddingEnd="@dimen/app_size_1"
        android:text="Отмена"
        android:textColor="@color/fill_text_basic_action_link"
        android:textSize="@dimen/font_large"/>

    <EditText
        android:id="@+id/brandedHeaderSearchView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/brandedHeaderSearchCancelView"
        android:layout_marginTop="@dimen/app_size_0_5"
        android:layout_marginBottom="@dimen/app_size_0_5"
        android:paddingTop="@dimen/app_size_0_5"
        android:paddingBottom="@dimen/app_size_0_5"
        android:paddingStart="@dimen/app_size_3"
        android:paddingEnd="@dimen/app_size_1"
        android:hint="Введите для поиска"
        android:textSize="@dimen/font_normal"
        android:textColorHint="@color/fill_text_basic_light"
        android:textColor="@color/fill_text_basic"
        android:background="@drawable/layout_row"
        android:backgroundTint="@color/fill_contrast_light"/>

    <ImageView
        android:layout_width="@dimen/app_size_1"
        android:layout_height="@dimen/app_size_1"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/app_size_1"
        android:src="@drawable/ic_search"
        android:tint="@color/fill_text_basic"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/app_size_0_25"
    android:layout_marginBottom="@dimen/app_size_0_25"
    android:layout_marginStart="@dimen/app_size_1"
    android:layout_marginEnd="@dimen/app_size_1"
    android:paddingTop="@dimen/app_size_1"
    android:paddingBottom="@dimen/app_size_1"
    android:paddingStart="@dimen/app_size_2"
    android:paddingEnd="@dimen/app_size_2"
    android:background="@drawable/layout_row"
    android:backgroundTint="@color/alt_contrast_light">

    <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
        android:id="@+id/monitoringPaymentsItemNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_large"
        android:textColor="@color/fill_text_base"/>

    <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
        android:id="@+id/monitoringPaymentsItemDeptView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="2000 ла"
        android:textColor="@color/fill_text_negative"
        android:textSize="@dimen/font_large"/>

</RelativeLayout>
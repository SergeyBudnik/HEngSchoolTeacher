<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/brandedSecondaryHeaderLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/app_size_1"
        android:layout_marginBottom="@dimen/app_size_1"
        android:textSize="@dimen/font_normal"
        app:app_font="regular"/>

    <View
        android:id="@+id/activeMarkView"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/brandedSecondaryHeaderLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fill_contrast_base">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/app_size_1"
        android:layout_marginBottom="@dimen/app_size_1"
        android:gravity="center_vertical">

        <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
            android:id="@+id/brandedSecondaryHeaderItemTitleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_normal"
            app:app_font="regular"/>

        <ImageView
            android:id="@+id/brandedSecondaryHeaderItemIconView"
            android:layout_width="@dimen/app_size_1_5"
            android:layout_height="@dimen/app_size_1_5"
            android:layout_marginStart="@dimen/app_size_0_5"
            android:importantForAccessibility="no"
            android:visibility="gone"/>

    </LinearLayout>

    <View
        android:id="@+id/activeMarkView"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

</LinearLayout>
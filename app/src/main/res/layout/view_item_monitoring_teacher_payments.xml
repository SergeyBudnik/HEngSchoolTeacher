<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/app_size_1"
    android:paddingBottom="@dimen/app_size_1"
    android:paddingStart="@dimen/app_size_2"
    android:paddingEnd="@dimen/app_size_2"
    android:layout_marginTop="@dimen/app_size_0_5"
    android:layout_marginStart="@dimen/app_size_1"
    android:layout_marginEnd="@dimen/app_size_1"
    android:background="@drawable/layout_row"
    android:backgroundTint="@color/alt_contrast_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
            android:id="@+id/monitoringTeacherPaymentsItemAmountView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_large"
            android:textColor="@color/fill_text_basic_accent"/>

        <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
            android:id="@+id/monitoringTeacherPaymentsItemTeacherView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fill_text_basic"
            android:textSize="@dimen/font_normal"/>

        <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
            android:id="@+id/monitoringTeacherPaymentsItemStudentView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fill_text_basic_light"
            android:textSize="@dimen/font_normal"/>

        <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
            android:id="@+id/monitoringTeacherPaymentsItemDateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/fill_text_basic_subtle"/>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/app_size_3"
        android:layout_height="@dimen/app_size_3"
        android:padding="@dimen/app_size_0_5"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_tick"
        android:tint="@color/fill_text_basic_positive"
        android:importantForAccessibility="no"/>

</RelativeLayout>
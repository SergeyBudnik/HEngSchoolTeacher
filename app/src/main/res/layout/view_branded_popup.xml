<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/brandedPopupShadowView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alt_contrast_base"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/app_size_3"
        android:layout_marginEnd="@dimen/app_size_3"
        android:background="@drawable/layout_popup"
        android:clickable="true"
        android:focusable="true">
        
        <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
            android:id="@+id/brandedPopupTitleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_size_1"
            android:layout_marginStart="@dimen/app_size_1"
            android:layout_marginEnd="@dimen/app_size_1"
            android:textSize="@dimen/font_large"
            android:textColor="@color/fill_text_basic_accent"/>

        <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
            android:id="@+id/brandedPopupTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_size_1"
            android:layout_marginStart="@dimen/app_size_1"
            android:layout_marginEnd="@dimen/app_size_1"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/fill_text_basic"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end">

            <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
                android:id="@+id/brandedPopupButton1View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/app_size_1"
                android:textSize="@dimen/font_large"
                android:textColor="@color/fill_text_basic_action_link"/>

            <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
                android:id="@+id/brandedPopupButton2View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/app_size_1"
                android:textSize="@dimen/font_large"
                android:textColor="@color/fill_text_basic_action_link"/>

            <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
                android:id="@+id/brandedPopupButton3View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/app_size_1"
                android:textSize="@dimen/font_large"
                android:textColor="@color/fill_text_basic_action_link"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
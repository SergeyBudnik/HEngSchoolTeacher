<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.bdev.hengschoolteacher.ui.views.app.AppHeaderView_
        android:id="@+id/lessonHeaderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Мониторинг оплаты. Студент"
        app:leftIcon="@drawable/ic_arrow_left"/>

    <com.bdev.hengschoolteacher.ui.views.app.AppMenuLayoutView_
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_size_1"
                android:layout_marginStart="@dimen/app_size_1"
                android:layout_marginEnd="@dimen/app_size_1"
                android:paddingTop="@dimen/app_size_1"
                android:paddingBottom="@dimen/app_size_1"
                android:paddingStart="@dimen/app_size_2"
                android:paddingEnd="@dimen/app_size_2"
                android:background="@drawable/layout_row"
                android:backgroundTint="@color/alt_contrast_light">

                <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Долг:"
                    android:textSize="@dimen/font_large"
                    android:textColor="@color/fill_text_base"/>

                <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="1000 Р"
                    android:textSize="@dimen/font_large"
                    android:textColor="@color/fill_text_accent"/>

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_size_1"
                android:paddingTop="@dimen/app_size_1"
                android:paddingBottom="@dimen/app_size_1"
                android:paddingStart="@dimen/app_size_2"
                android:paddingEnd="@dimen/app_size_2"
                android:weightSum="5"
                android:background="@color/alt_contrast_light">

                <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Месяц"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/fill_text_base"/>

                <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Занятия"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/fill_text_base"/>

                <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Оплата"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/fill_text_base"/>

            </LinearLayout>

            <ListView
                android:id="@+id/monitoringStudentPaymentListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/app_size_0_75"
                android:paddingBottom="@dimen/app_size_0_75"
                android:clipToPadding="false"
                android:divider="@null"
                android:dividerHeight="0dp"/>

        </LinearLayout>

    </com.bdev.hengschoolteacher.ui.views.app.AppMenuLayoutView_>

</LinearLayout>